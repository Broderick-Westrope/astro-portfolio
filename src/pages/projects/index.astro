---
import { projectData } from './data'
import BaseLayout from '@/layouts/BaseLayout.astro'
import ListProjects from '@/components/ListProjects.vue'
---

<BaseLayout title="Projects" description="List of projects that I am proud of">
  <h1 class="mb-10 text-6xl font-extrabold opacity-50">Projects</h1>
  <div class="mb-16 sm:mb-24">
    {
      projectData.length > 0 && (
        <div>
          {projectData.map((i) => (
            <div class="mb-10">
              <h2 class="select-none relative h-20 pointer-events-none">
                <span class="text-4xl font-bold absolute top-0">
              {i.title}
                </span>
              </h2>
              <ListProjects list={i.projects} />
            </div>
          ))}
        </div>
      )
    }
  </div>
</BaseLayout>